# 스마트팜 AI재배관리 솔루션 환경 변수

# 환경 설정
ENVIRONMENT=development

# 데이터베이스 설정
DATABASE_URL=postgresql://smartfarm_user:smartfarm_password@localhost:5432/smartfarm
POSTGRES_DB=smartfarm
POSTGRES_USER=smartfarm_user
POSTGRES_PASSWORD=smartfarm_password

# Redis 설정
REDIS_URL=redis://localhost:6379

# JWT 설정
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API 설정
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8080

# IoT 설정
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# 파일 업로드 설정
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# ML 모델 설정
MODEL_PATH=models
MODEL_UPDATE_INTERVAL=3600

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/smartfarm.log

# 모니터링 설정
ENABLE_MONITORING=true
METRICS_PORT=9090 